#!/usr/bin/env zsh               
#####################################################################

MAIN() {
	PROMPT 'select a script log'
	LOG_FILE=$(cd "${SCWRYPTS_LOG_PATH}"; ls -t | utils.fzf 'logfile')
	[ "${LOG_FILE}" ] || utils.abort
	
	echo.status 'opening logfile'
	LESS "${SCWRYPTS_LOG_PATH}/${LOG_FILE}"
	echo.success 'done'
}
