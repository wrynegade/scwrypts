#!/bin/zsh
use system/vim/vundle
#####################################################################

MAIN() {

	[ -d "${VUNDLE__PLUGIN_DIR}/Vundle.vim" ] || {
		mkdir -p "${VUNDLE__PLUGIN_DIR}/"
		git clone https://github.com/VundleVim/Vundle.vim.git "${VIM_CONFIG_DIR}/bundle/Vundle.vim"
	}

	VUNDLE__PLUGIN_INSTALL  || return 1
	VUNDLE__REBUILD_PLUGINS || return 2
}
